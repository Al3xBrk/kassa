<Window x:Class="Kassa.AdminUsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пользователи"
        Height="400"
        Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="UsersDataGrid"
                  Grid.Row="0"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО"
                                    Binding="{Binding FullName}"
                                    Width="*"/>
                <DataGridTextColumn Header="Роль"
                                    Binding="{Binding Role}"
                                    Width="120"/>
                <DataGridTextColumn Header="Время авто-выхода (мин)"
                                    Binding="{Binding AutoLogoutMinutes}"
                                    Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Добавить кассира"
                    Width="140"
                    Margin="0,0,10,0"
                    Click="AddCashierButton_Click"/>
            <Button Content="Удалить"
                    Width="100"
                    Click="DeleteButton_Click"/>
            <Button Content="Изменить время авто-выхода"
                    Width="200"
                    Margin="0,0,10,0"
                    Click="EditAutoLogoutButton_Click"/>
            <Button Content="Закрыть"
                    Width="100"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
