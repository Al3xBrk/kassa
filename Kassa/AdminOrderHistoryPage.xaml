<Page x:Class="Kassa.AdminOrderHistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="История заказов">
    <StackPanel Margin="20">
        <TextBlock Text="История заказов"
                FontWeight="Bold"
                FontSize="18"
                Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal"
                Margin="0,0,0,10">
            <TextBlock Text="Год:"
                    VerticalAlignment="Center"
                    Margin="0,0,5,0"/>
            <ComboBox x:Name="YearComboBox"
                    Width="80"
                    SelectionChanged="Filter_Changed"
                    Margin="0,0,10,0"/>
            <TextBlock Text="Дата:"
                    VerticalAlignment="Center"
                    Margin="0,0,5,0"/>
            <DatePicker x:Name="DatePickerFilter"
                    Width="140"
                    SelectedDateChanged="DatePickerFilter_SelectedDateChanged"/>
        </StackPanel>
        <ListView x:Name="OrderHistoryListView"
                Height="320">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Дата и время"
                            Width="160"
                            DisplayMemberBinding="{Binding OrderDate, StringFormat=dd.MM.yyyy HH:mm}"/>
                    <GridViewColumn Header="Стоимость"
                            Width="100"
                            DisplayMemberBinding="{Binding TotalAmount, StringFormat=N2}"/>
                    <GridViewColumn Header="Статус"
                            Width="100"
                            DisplayMemberBinding="{Binding StatusName}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</Page>
