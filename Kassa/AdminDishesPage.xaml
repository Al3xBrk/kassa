<Page x:Class="Kassa.AdminDishesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Добавление блюд">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0"
                CornerRadius="12"
                Background="#fff"
                Padding="18"
                Margin="0,0,12,0">
            <StackPanel>
                <TextBlock Text="Группы блюд"
                           FontWeight="Bold"
                           FontSize="18"
                           Margin="0,0,0,10"/>
                <ListBox x:Name="GroupsListBox"
                         Height="180"
                         SelectionChanged="GroupsListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding}"
                                           Width="120"/>
                                <Button Width="28"
                                        Height="28"
                                        Margin="4,0,0,0"
                                        ToolTip="Редактировать группу"
                                        Click="EditGroup_Click"
                                        DataContext="{Binding}">
                                    <Image Source="pack://application:,,,/Kassa;component/resource/icons8-edit-30.png"/>
                                </Button>
                                <Button Width="28"
                                        Height="28"
                                        Margin="4,0,0,0"
                                        ToolTip="Удалить группу"
                                        Click="DeleteGroup_Click"
                                        DataContext="{Binding}">
                                    <Image Source="pack://application:,,,/Kassa;component/resource/icons8-trash-30.png"/>
                                </Button>

                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Button Content="Добавить группу"
                        Width="140"
                        Margin="0,10,0,0"
                        Click="AddGroup_Click"/>
            </StackPanel>
        </Border>
        <Border Grid.Column="1"
                CornerRadius="12"
                Background="#fff"
                Padding="18"
                Margin="12,0,0,0">
            <StackPanel>
                <TextBlock Text="Блюда группы"
                           FontWeight="Bold"
                           FontSize="18"
                           Margin="0,0,0,10"/>
                <ListBox x:Name="DishesListBox"
                         Height="120">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding}"
                                           Width="160"/>
                                <Button Width="28"
                                        Height="28"
                                        Margin="4,0,0,0"
                                        ToolTip="Редактировать блюдо"
                                        Click="EditDish_Click"
                                        DataContext="{Binding}">
                                    <Image Source="pack://application:,,,/Kassa;component/resource/icons8-edit-30.png"/>
                                </Button>
                                <Button Width="28"
                                        Height="28"
                                        Margin="4,0,0,0"
                                        ToolTip="Удалить блюдо"
                                        Click="DeleteDish_Click"
                                        DataContext="{Binding}">
                                    <Image Source="pack://application:,,,/Kassa;component/resource/icons8-trash-30.png"/>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Button Content="Добавить блюдо"
                        Width="140"
                        Margin="0,10,0,0"
                        Click="AddDish_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
