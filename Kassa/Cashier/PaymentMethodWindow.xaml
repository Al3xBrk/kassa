<Window x:Class="Kassa.PaymentMethodWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор способа оплаты"
        Height="650"
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"
                    MinHeight="300"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Информация о заказе -->
        <StackPanel Grid.Row="0"
                    Margin="0,0,0,15">
            <TextBlock Text="Информация о заказе:"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           Text="Зал:"
                           FontWeight="Bold"
                           Margin="0,0,10,5"/>
                <TextBlock Grid.Row="0"
                           Grid.Column="1"
                           x:Name="HallTextBlock"
                           Text="[Имя зала]"/>

                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Text="Стол №:"
                           FontWeight="Bold"
                           Margin="0,0,10,5"/>
                <TextBlock Grid.Row="1"
                           Grid.Column="1"
                           x:Name="TableNumberTextBlock"
                           Text="[Номер]"/>

                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Text="Сумма к оплате:"
                           FontWeight="Bold"
                           FontSize="16"
                           Margin="0,0,10,0"/>
                <TextBlock Grid.Row="2"
                           Grid.Column="1"
                           x:Name="TotalAmountTextBlock"
                           Text="0.00 BYN"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#007acc"/>
            </Grid>
        </StackPanel>

        <TextBlock Grid.Row="1"
                   Text="Выберите способ оплаты:"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- Кнопки выбора способа оплаты вместо ListBox -->
        <StackPanel Grid.Row="2">
            <Button x:Name="CardPaymentButton"
                    Content="Оплата картой"
                    Height="70"
                    Margin="0,0,0,20"
                    Background="#4CAF50"
                    Foreground="White"
                    FontSize="20"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Click="CardPaymentButton_Click">
                <Button.Effect>
                    <DropShadowEffect Color="Gray"
                            Direction="320"
                            ShadowDepth="3"
                            Opacity="0.5"/>
                </Button.Effect>
            </Button>

            <Button x:Name="CashPaymentButton"
                    Content="Оплата наличными"
                    Height="70"
                    Background="#2196F3"
                    Foreground="White"
                    FontSize="20"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Click="CashPaymentButton_Click">
                <Button.Effect>
                    <DropShadowEffect Color="Gray"
                            Direction="320"
                            ShadowDepth="3"
                            Opacity="0.5"/>
                </Button.Effect>
            </Button>
            <!-- Панель ввода наличных -->
            <Border Background="#F0F8FF"
                    BorderBrush="#2196F3"
                    BorderThickness="2"
                    CornerRadius="5"
                    Margin="0,20,0,0"
                    Padding="0"
                    Visibility="Collapsed"
                    x:Name="CashInputPanel">
                <StackPanel Margin="15">
                    <TextBlock Text="Внесено наличными:"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0,5,0,10"/>
                    <TextBox x:Name="CashGivenTextBox"
                             FontSize="22"
                             Height="50"
                             Padding="15,8"
                             BorderThickness="2"
                             TextChanged="CashGivenTextBox_TextChanged"/>
                    <Border Margin="0,20,0,5"
                            Background="#E3F2FD"
                            BorderBrush="#1E88E5"
                            BorderThickness="0,0,0,2"
                            Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Сдача:"
                                       FontWeight="Bold"
                                       FontSize="22"
                                       Margin="0,0,15,0"/>
                            <TextBlock Grid.Column="1"
                                       x:Name="ChangeTextBlock"
                                       Text="0.00 BYN"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#007acc"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>

        <Border Grid.Row="3"
                BorderBrush="#CCCCCC"
                BorderThickness="0,1,0,0"
                Margin="0,15,0,15"/>
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Отмена"
                    Width="120"
                    Height="45"
                    FontSize="16"
                    Margin="0,0,15,0"
                    Click="CancelButton_Click"/>
            <Button x:Name="ConfirmButton"
                    Content="Подтвердить"
                    Width="150"
                    Height="45"
                    FontSize="16"
                    FontWeight="Bold"
                    Background="#4CAF50"
                    Foreground="White"
                    IsEnabled="False"
                    Click="ConfirmButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
