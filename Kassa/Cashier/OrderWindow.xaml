<Window x:Class="Kassa.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🍽️ Создание заказа - Ресторанная система"
        Height="750"
        Width="1100"
        WindowStartupLocation="CenterOwner"
        Background="#F5F7FA"
        FontFamily="Segoe UI"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        MinHeight="650"
        MinWidth="950">

    <!-- Современные стили для OrderWindow -->
    <Window.Resources>
        <!-- Стиль для групп блюд -->
        <Style x:Key="GroupsListBoxStyle"
                TargetType="ListBox">
            <Setter Property="Background"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility"
                    Value="Disabled"/>
            <Setter Property="Padding"
                    Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8"
                                        ShadowDepth="2"
                                        Color="#20000000"
                                        Opacity="0.3"/>
                            </Border.Effect>
                            <ScrollViewer Focusable="False"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="{TemplateBinding ScrollViewer.HorizontalScrollBarVisibility}">
                                <StackPanel IsItemsHost="True"/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для элементов групп -->
        <Style x:Key="GroupItemStyle"
                TargetType="ListBoxItem">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="15,12"/>
            <Setter Property="Margin"
                    Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="#E9ECEF"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                Value="True">
                                            <Setter Property="Background"
                                                    Value="#E8F4FD"/>
                                            <Setter Property="BorderBrush"
                                                    Value="#3498DB"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected"
                                    Value="True">
                                <Setter Property="Background"
                                        Value="#3498DB"/>
                                <Setter Property="Foreground"
                                        Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для блюд -->
        <Style x:Key="DishCardStyle"
                TargetType="Border">
            <Setter Property="Background"
                    Value="White"/>
            <Setter Property="BorderBrush"
                    Value="#E9ECEF"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="12"/>
            <Setter Property="Padding"
                    Value="15"/>
            <Setter Property="Margin"
                    Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5"
                            ShadowDepth="1"
                            Color="#20000000"
                            Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                        Value="True">
                    <Setter Property="BorderBrush"
                            Value="#3498DB"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="8"
                                    ShadowDepth="2"
                                    Color="#30000000"
                                    Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для современных кнопок -->
        <Style x:Key="ModernButtonStyle"
                TargetType="Button">
            <Setter Property="Background"
                    Value="#3498DB"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="FontSize"
                    Value="13"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="12,8">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="3"
                                        ShadowDepth="1"
                                        Color="#20000000"
                                        Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                    Value="True">
                                <Setter Property="Background"
                                        Value="#2980B9"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                    Value="True">
                                <Setter Property="Background"
                                        Value="#21618C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопки добавления -->
        <Style x:Key="AddButtonStyle"
                TargetType="Button"
                BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background"
                    Value="#27AE60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                        Value="True">
                    <Setter Property="Background"
                            Value="#2ECC71"/>
                </Trigger>
                <Trigger Property="IsPressed"
                        Value="True">
                    <Setter Property="Background"
                            Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для кнопки удаления -->
        <Style x:Key="RemoveButtonStyle"
                TargetType="Button"
                BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background"
                    Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                        Value="True">
                    <Setter Property="Background"
                            Value="#C0392B"/>
                </Trigger>
                <Trigger Property="IsPressed"
                        Value="True">
                    <Setter Property="Background"
                            Value="#A93226"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для основных кнопок действий -->
        <Style x:Key="ActionButtonStyle"
                TargetType="Button">
            <Setter Property="Background"
                    Value="#27AE60"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="FontWeight"
                    Value="Bold"/>
            <Setter Property="FontSize"
                    Value="16"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Height"
                    Value="50"/>
            <Setter Property="MinWidth"
                    Value="120"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="20,10">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8"
                                        ShadowDepth="3"
                                        Color="#40000000"
                                        Opacity="0.4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                    Value="True">
                                <Setter Property="Background"
                                        Value="#2ECC71"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                    Value="True">
                                <Setter Property="Background"
                                        Value="#229954"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для оплаты -->
        <Style x:Key="PayButtonStyle"
                TargetType="Button"
                BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background"
                    Value="#E67E22"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                        Value="True">
                    <Setter Property="Background"
                            Value="#F39C12"/>
                </Trigger>
                <Trigger Property="IsPressed"
                        Value="True">
                    <Setter Property="Background"
                            Value="#D68910"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <!-- Основная сетка с заголовком -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок окна -->
        <Border Grid.Row="0"
                Background="White"
                CornerRadius="12"
                Padding="20,15"
                Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10"
                        ShadowDepth="2"
                        Color="#40000000"
                        Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                        VerticalAlignment="Center">
                    <TextBlock Text="🍽️ Создание заказа"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#2C3E50"/>
                    <TextBlock x:Name="OrderInfoTextBlock"
                               Text="Новый заказ"
                               FontSize="14"
                               FontWeight="Normal"
                               Foreground="#7F8C8D"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Button x:Name="AddGuestButton"
                            Content="👤 Добавить гостя"
                            Style="{StaticResource AddButtonStyle}"
                            Height="40"
                            Click="AddGuestButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Панель групп блюд -->
            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="12"
                    Padding="15"
                    Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8"
                            ShadowDepth="2"
                            Color="#20000000"
                            Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="📋 Группы блюд"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="#2C3E50"
                               Margin="0,0,0,15"/>
                    <ListBox x:Name="GroupsListBox"
                             SelectionChanged="GroupsListBox_SelectionChanged"
                             Style="{StaticResource GroupsListBoxStyle}"
                             ItemContainerStyle="{StaticResource GroupItemStyle}"
                             MaxHeight="500"/>
                </StackPanel>
            </Border>

            <!-- Панель блюд -->
            <Border Grid.Column="1"
                    Background="White"
                    CornerRadius="12"
                    Padding="15"
                    Margin="5,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8"
                            ShadowDepth="2"
                            Color="#20000000"
                            Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="🍕 Меню блюд"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="#2C3E50"
                               Margin="0,0,0,15"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  MaxHeight="500">
                        <ListBox x:Name="DishesListBox"
                                 Background="Transparent"
                                 BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource DishCardStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0"
                                                    VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="15"
                                                           FontWeight="SemiBold"
                                                           Foreground="#2C3E50"
                                                           TextWrapping="Wrap"/>
                                                <TextBlock Text="{Binding Price, StringFormat='{}{0:N2} BYN'}"
                                                           FontSize="13"
                                                           Foreground="#27AE60"
                                                           FontWeight="Bold"
                                                           Margin="0,3,0,0"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="1"
                                                       Text="🍽️"
                                                       FontSize="20"
                                                       VerticalAlignment="Center"
                                                       Margin="10,0"/>

                                            <Button Grid.Column="2"
                                                    Content="➕ Добавить"
                                                    Style="{StaticResource AddButtonStyle}"
                                                    Click="AddDishToOrder_Click"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- Панель заказа -->
            <Border Grid.Column="2"
                    Background="White"
                    CornerRadius="12"
                    Padding="15"
                    Margin="10,0,0,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8"
                            ShadowDepth="2"
                            Color="#20000000"
                            Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="🛒 Состав заказа"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="#2C3E50"
                               Margin="0,0,0,15"/>

                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  MaxHeight="400">
                        <ListBox x:Name="OrderListBox"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 SelectionChanged="OrderListBox_SelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F8F9FA"
                                            CornerRadius="8"
                                            Padding="12"
                                            Margin="0,0,0,10">
                                        <StackPanel>
                                            <TextBlock Text="{Binding DisplayName}"
                                                       FontWeight="Bold"
                                                       FontSize="14"
                                                       Foreground="#2C3E50"
                                                       Margin="0,0,0,8"/>

                                            <ItemsControl ItemsSource="{Binding Dishes}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="White"
                                                                CornerRadius="6"
                                                                Padding="10"
                                                                Margin="0,2">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <TextBlock Grid.Column="0"
                                                                           Text="{Binding NameAndPrice}"
                                                                           FontSize="13"
                                                                           VerticalAlignment="Center"
                                                                           Foreground="#34495E"/>

                                                                <Button Grid.Column="1"
                                                                        Content="-"
                                                                        Style="{StaticResource RemoveButtonStyle}"
                                                                        FontSize="10"
                                                                        Width="25"
                                                                        Height="25"
                                                                        Click="RemoveDishFromOrder_Click"
                                                                        Tag="{Binding}"/>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Нижняя панель с итогами и кнопками -->
        <Border Grid.Row="2"
                Background="White"
                CornerRadius="12"
                Padding="20"
                Margin="0,20,0,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10"
                        ShadowDepth="2"
                        Color="#40000000"
                        Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Информация о заказе -->
                <StackPanel Grid.Column="0"
                            VerticalAlignment="Center">
                    <TextBlock Text="💰 Итоговая сумма:"
                               FontWeight="Bold"
                               FontSize="18"
                               Foreground="#2C3E50"/>
                    <TextBlock x:Name="TotalAmountTextBlock"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#27AE60"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Кнопки действий -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Button x:Name="SaveOrderButton"
                            Content="💾 Сохранить"
                            Style="{StaticResource ActionButtonStyle}"
                            Margin="0,0,15,0"
                            Click="SaveOrder_Click"/>
                    <Button x:Name="PayOrderButton"
                            Content="💳 Оплатить"
                            Style="{StaticResource PayButtonStyle}"
                            Visibility="Collapsed"
                            Click="PayOrder_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
