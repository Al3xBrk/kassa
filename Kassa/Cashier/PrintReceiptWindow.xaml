<Window x:Class="Kassa.PrintReceiptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🧾 Чек заказа - Ресторанная система"
        Height="989"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F7FA"
        FontFamily="Segoe UI">

        <Window.Resources>
                <!-- Стиль для основной карточки чека -->
                <Style x:Key="ReceiptCardStyle"
                                TargetType="Border">
                        <Setter Property="Background"
                                        Value="White"/>
                        <Setter Property="CornerRadius"
                                        Value="15"/>
                        <Setter Property="Effect">
                                <Setter.Value>
                                        <DropShadowEffect BlurRadius="15"
                                                        ShadowDepth="3"
                                                        Color="#40000000"
                                                        Opacity="0.3"/>
                                </Setter.Value>
                        </Setter>
                </Style>

                <!-- Стиль для заголовка чека -->
                <Style x:Key="ReceiptHeaderStyle"
                                TargetType="TextBlock">
                        <Setter Property="FontSize"
                                        Value="24"/>
                        <Setter Property="FontWeight"
                                        Value="Bold"/>
                        <Setter Property="Foreground"
                                        Value="#2C3E50"/>
                        <Setter Property="HorizontalAlignment"
                                        Value="Center"/>
                        <Setter Property="Margin"
                                        Value="0,0,0,20"/>
                </Style>

                <!-- Стиль для информационных полей -->
                <Style x:Key="ReceiptInfoStyle"
                                TargetType="TextBlock">
                        <Setter Property="FontSize"
                                        Value="14"/>
                        <Setter Property="Foreground"
                                        Value="#34495E"/>
                        <Setter Property="Margin"
                                        Value="0,0,0,8"/>
                </Style>

                <!-- Стиль для важной информации -->
                <Style x:Key="ReceiptImportantStyle"
                                TargetType="TextBlock">
                        <Setter Property="FontSize"
                                        Value="16"/>
                        <Setter Property="FontWeight"
                                        Value="Bold"/>
                        <Setter Property="Foreground"
                                        Value="#2C3E50"/>
                        <Setter Property="Margin"
                                        Value="0,0,0,8"/>
                </Style>

                <!-- Стиль для разделителя -->
                <Style x:Key="SeparatorStyle"
                                TargetType="Border">
                        <Setter Property="Height"
                                        Value="2"/>
                        <Setter Property="Background"
                                        Value="#E0E6ED"/>
                        <Setter Property="Margin"
                                        Value="0,15,0,15"/>
                        <Setter Property="CornerRadius"
                                        Value="1"/>
                </Style>

                <!-- Стиль для ListView чека -->
                <Style x:Key="ReceiptListViewStyle"
                                TargetType="ListView">
                        <Setter Property="Background"
                                        Value="#F8F9FA"/>
                        <Setter Property="BorderThickness"
                                        Value="0"/>
                        <Setter Property="FontSize"
                                        Value="13"/>
                        <Setter Property="Template">
                                <Setter.Value>
                                        <ControlTemplate TargetType="ListView">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="8"
                                                        Padding="10">
                                                        <ScrollViewer>
                                                                <ItemsPresenter/>
                                                        </ScrollViewer>
                                                </Border>
                                        </ControlTemplate>
                                </Setter.Value>
                        </Setter>
                </Style>

                <!-- Стиль для кнопки закрытия -->
                <Style x:Key="CloseButtonStyle"
                                TargetType="Button">
                        <Setter Property="Background"
                                        Value="#3498DB"/>
                        <Setter Property="Foreground"
                                        Value="White"/>
                        <Setter Property="BorderThickness"
                                        Value="0"/>
                        <Setter Property="Height"
                                        Value="45"/>
                        <Setter Property="Width"
                                        Value="140"/>
                        <Setter Property="FontSize"
                                        Value="16"/>
                        <Setter Property="FontWeight"
                                        Value="SemiBold"/>
                        <Setter Property="Cursor"
                                        Value="Hand"/>
                        <Setter Property="Template">
                                <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="8"
                                                        Padding="20,0">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver"
                                                                        Value="True">
                                                                <Setter Property="Background"
                                                                                Value="#2980B9"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed"
                                                                        Value="True">
                                                                <Setter Property="Background"
                                                                                Value="#2471A3"/>
                                                        </Trigger>
                                                </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                </Setter.Value>
                        </Setter>
                </Style>

                <!-- Стиль для итоговой суммы -->
                <Style x:Key="TotalAmountStyle"
                                TargetType="TextBlock">
                        <Setter Property="FontSize"
                                        Value="20"/>
                        <Setter Property="FontWeight"
                                        Value="Bold"/>
                        <Setter Property="Foreground"
                                        Value="#27AE60"/>
                        <Setter Property="HorizontalAlignment"
                                        Value="Right"/>
                        <Setter Property="Margin"
                                        Value="0,10,0,0"/>
                </Style>

                <!-- Стиль для секций -->
                <Style x:Key="SectionStyle"
                                TargetType="Border">
                        <Setter Property="Background"
                                        Value="#F8F9FA"/>
                        <Setter Property="CornerRadius"
                                        Value="8"/>
                        <Setter Property="Padding"
                                        Value="15"/>
                        <Setter Property="Margin"
                                        Value="0,0,0,15"/>
                </Style>
        </Window.Resources>

        <Border Style="{StaticResource ReceiptCardStyle}"
                Margin="20,20,20,5">
                <StackPanel Margin="25">
                        <!-- Заголовок чека с иконкой -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,20">
                                <TextBlock Text="🧾"
                                           FontSize="28"
                                           VerticalAlignment="Center"
                                           Margin="0,0,15,0"/>
                                <TextBlock Text="Чек заказа"
                                           Style="{StaticResource ReceiptHeaderStyle}"
                                           Margin="0"/>
                        </StackPanel>

                        <!-- Информация о ресторане -->
                        <Border Style="{StaticResource SectionStyle}">
                                <StackPanel>
                                        <StackPanel Orientation="Horizontal"
                                                        Margin="0,0,0,8">
                                                <TextBlock Text="🏪"
                                                                FontSize="16"
                                                                VerticalAlignment="Center"
                                                                Margin="0,0,8,0"/>
                                                <TextBlock Text="Ресторанная система"
                                                           FontSize="16"
                                                           FontWeight="Bold"
                                                           Foreground="#2C3E50"/>
                                        </StackPanel>
                                        <TextBlock Text="Спасибо за ваш визит!"
                                                   FontSize="12"
                                                   Foreground="#7F8C8D"/>
                                </StackPanel>
                        </Border>

                        <!-- Информация о заказе -->
                        <Border Style="{StaticResource SectionStyle}">
                                <StackPanel>
                                        <StackPanel Orientation="Horizontal"
                                                        Margin="0,0,0,10">
                                                <TextBlock Text="📋"
                                                                FontSize="16"
                                                                VerticalAlignment="Center"
                                                                Margin="0,0,8,0"/>
                                                <TextBlock Text="Информация о заказе"
                                                           FontSize="14"
                                                           FontWeight="Bold"
                                                           Foreground="#2C3E50"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal"
                                                        Margin="0,0,0,5">
                                                <TextBlock Text="📅 Дата заказа:"
                                                           Style="{StaticResource ReceiptInfoStyle}"
                                                           Width="120"/>
                                                <TextBlock x:Name="OrderDateText"
                                                           Style="{StaticResource ReceiptInfoStyle}"
                                                           FontWeight="SemiBold"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="🖨️ Дата печати:"
                                                           Style="{StaticResource ReceiptInfoStyle}"
                                                           Width="120"/>
                                                <TextBlock x:Name="PrintDateText"
                                                           Style="{StaticResource ReceiptInfoStyle}"
                                                           FontWeight="SemiBold"/>
                                        </StackPanel>
                                </StackPanel>
                        </Border>

                        <!-- Список блюд -->
                        <Border Style="{StaticResource SectionStyle}">
                                <StackPanel>
                                        <StackPanel Orientation="Horizontal"
                                                        Margin="0,0,0,10">
                                                <TextBlock Text="🍽️"
                                                                FontSize="16"
                                                                VerticalAlignment="Center"
                                                                Margin="0,0,8,0"/>
                                                <TextBlock Text="Состав заказа"
                                                           FontSize="14"
                                                           FontWeight="Bold"
                                                           Foreground="#2C3E50"/>
                                        </StackPanel>

                                        <ListView x:Name="DishesListView"
                                                  Height="200"
                                                  Style="{StaticResource ReceiptListViewStyle}">
                                                <ListView.View>
                                                        <GridView>
                                                                <GridViewColumn Header="Блюдо"
                                                                                Width="220"
                                                                                DisplayMemberBinding="{Binding Name}"/>
                                                                <GridViewColumn Header="Цена (руб.)"
                                                                                Width="100"
                                                                                DisplayMemberBinding="{Binding Price, StringFormat=N2}"/>
                                                        </GridView>
                                                </ListView.View>
                                        </ListView>
                                </StackPanel>
                        </Border>

                        <!-- Разделитель -->
                        <Border Style="{StaticResource SeparatorStyle}"/>

                        <!-- Итоговая информация -->
                        <StackPanel>
                                <TextBlock x:Name="TotalText"
                                           Style="{StaticResource TotalAmountStyle}"/>

                                <!-- Дополнительная информация о платеже -->
                                <StackPanel x:Name="PaymentInfoPanel"
                                                Margin="0,15,0,0">
                                        <StackPanel Orientation="Horizontal"
                                                        Margin="0,0,0,5">
                                                <TextBlock Text="💳"
                                                                FontSize="14"
                                                                VerticalAlignment="Center"
                                                                Margin="0,0,8,0"/>
                                                <TextBlock Text="Способ оплаты:"
                                                           Style="{StaticResource ReceiptInfoStyle}"
                                                           Width="120"/>
                                                <TextBlock x:Name="PaymentMethodText"
                                                           Style="{StaticResource ReceiptImportantStyle}"
                                                           Margin="0"
                                                           Visibility="Collapsed"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal"
                                                        Margin="0,0,0,5">
                                                <TextBlock Text="👤"
                                                                FontSize="14"
                                                                VerticalAlignment="Center"
                                                                Margin="0,0,8,0"/>
                                                <TextBlock Text="Кассир:"
                                                           Style="{StaticResource ReceiptInfoStyle}"
                                                           Width="120"/>
                                                <TextBlock x:Name="CashierText"
                                                           Style="{StaticResource ReceiptImportantStyle}"
                                                           Margin="0"
                                                           Visibility="Collapsed"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal"
                                                        Margin="0,0,0,5">
                                                <TextBlock Text="💰"
                                                                FontSize="14"
                                                                VerticalAlignment="Center"
                                                                Margin="0,0,8,0"/>
                                                <TextBlock Text="Получено:"
                                                           Style="{StaticResource ReceiptInfoStyle}"
                                                           Width="120"/>
                                                <TextBlock x:Name="CashGivenText"
                                                           Style="{StaticResource ReceiptInfoStyle}"
                                                           FontWeight="SemiBold"
                                                           Margin="0"
                                                           Visibility="Collapsed"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="💸"
                                                                FontSize="14"
                                                                VerticalAlignment="Center"
                                                                Margin="0,0,8,0"/>
                                                <TextBlock Text="Сдача:"
                                                           Style="{StaticResource ReceiptInfoStyle}"
                                                           Width="120"/>
                                                <TextBlock x:Name="ChangeText"
                                                           Style="{StaticResource ReceiptInfoStyle}"
                                                           FontWeight="SemiBold"
                                                           Margin="0"
                                                           Visibility="Collapsed"/>
                                        </StackPanel>
                                </StackPanel>
                        </StackPanel>

                        <!-- Футер -->
                        <Border Style="{StaticResource SeparatorStyle}"
                                        Margin="0,20,0,15"/>

                        <TextBlock Text="Благодарим за покупку! Приходите еще! 😊"
                                   FontSize="12"
                                   FontStyle="Italic"
                                   Foreground="#7F8C8D"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>

                        <!-- Кнопка закрытия -->
                        <Button Style="{StaticResource CloseButtonStyle}"
                                Click="CloseButton_Click"
                                HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="✅"
                                                        FontSize="16"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0"/>
                                        <TextBlock Text="Закрыть"
                                                        VerticalAlignment="Center"/>
                                </StackPanel>
                        </Button>
                </StackPanel>
        </Border>
</Window>
