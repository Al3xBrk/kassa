<Window x:Class="Kassa.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Администратор"
        Height="500"
        Width="900"
        WindowStartupLocation="CenterScreen">
        <Grid Margin="20">
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!-- Панель управления -->
                <StackPanel Grid.Column="0"
                            Grid.Row="0"
                            Background="#f3f3f3"
                            Margin="0,0,12,0"
                            VerticalAlignment="Stretch">
                        <TextBlock Text="Панель администратора"
                                   FontWeight="Bold"
                                   FontSize="16"
                                   Margin="10,10,10,20"/>
                        <Button x:Name="NavHomeButton"
                                Content="На главную"
                                Margin="10,0,10,10"
                                Height="40"
                                Click="NavHomeButton_Click"/>
                        <Button x:Name="NavDishesButton"
                                Content="Добавление блюд"
                                Margin="10,0,10,10"
                                Height="40"
                                Click="NavDishesButton_Click"/>
                        <Button x:Name="NavProfitButton"
                                Content="График прибыли"
                                Margin="10,0,10,10"
                                Height="40"
                                Click="NavProfitButton_Click"/>
                        <Button x:Name="NavReservationButton"
                                Content="Резервирование стола"
                                Margin="10,0,10,10"
                                Height="40"
                                Click="NavReservationButton_Click"/>
                        <Button x:Name="NavOrderHistoryButton"
                                Content="История заказов"
                                Margin="10,0,10,10"
                                Height="40"
                                Click="NavOrderHistoryButton_Click"/>
                        <Button x:Name="NavUsersButton"
                                Content="Пользователи"
                                Margin="10,0,10,10"
                                Height="40"
                                Click="NavUsersButton_Click"/>
                        <!-- <Button x:Name="NavAutoLogoutButton"
                                Content="Время авто-выхода"
                                Margin="10,0,10,10"
                                Height="40"
                                Click="NavAutoLogoutButton_Click"/> -->
                </StackPanel>
                <!-- Контент -->
                <Border Grid.Column="1"
                        Grid.Row="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,5,10,5"
                        Background="#EEEEEE"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        CornerRadius="4">
                        <WrapPanel VerticalAlignment="Center"
                                        Margin="8,0,8,0">
                                <TextBlock x:Name="AdminFullNameTextBlock"
                                           FontSize="14"
                                           Foreground="DarkSlateGray"
                                           Padding="0,4,12,4"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="LogoutTimerTextBlock"
                                           FontSize="14"
                                           Foreground="DarkRed"
                                           Padding="0,4,0,4"
                                           VerticalAlignment="Center"/>
                        </WrapPanel>
                </Border>
                <Frame x:Name="AdminContentFrame"
                       Grid.Column="1"
                       Grid.Row="0"
                       Margin="0,0,0,0"
                       NavigationUIVisibility="Hidden"/>
        </Grid>
</Window>
