<Window x:Class="Kassa.AddDishWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить блюдо"
        Height="220"
        Width="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Название блюда:"
                Grid.Row="0"
                Margin="0,0,0,2"/>
        <TextBox x:Name="DishNameTextBox"
                Grid.Row="1"
                Margin="0,0,0,10"/>
        <TextBlock Text="Цена:"
                Grid.Row="2"
                Margin="0,0,0,2"/>
        <TextBox x:Name="DishPriceTextBox"
                Grid.Row="3"
                Margin="0,0,0,10"/>
        <Button Content="Сохранить"
                Width="120"
                Height="32"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,10,0,0"
                Grid.Row="4"
                Click="SaveButton_Click"/>
    </Grid>
</Window>
