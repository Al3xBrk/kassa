<Page x:Class="Kassa.AdminReservationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      Title="📅 Резервирование столов"
      FontFamily="Segoe UI">

    <!-- Современные стили для AdminReservationPage -->
    <Page.Resources>
        <!-- Стиль для основной карточки -->
        <Style x:Key="MainCardStyle"
                TargetType="Border">
            <Setter Property="Background"
                    Value="White"/>
            <Setter Property="CornerRadius"
                    Value="15"/>
            <Setter Property="Padding"
                    Value="25"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15"
                            ShadowDepth="3"
                            Color="#40000000"
                            Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для секций -->
        <Style x:Key="SectionCardStyle"
                TargetType="Border">
            <Setter Property="Background"
                    Value="#F8F9FA"/>
            <Setter Property="CornerRadius"
                    Value="12"/>
            <Setter Property="Padding"
                    Value="20"/>
            <Setter Property="Margin"
                    Value="0,0,0,20"/>
        </Style>

        <!-- Стиль для заголовков -->
        <Style x:Key="SectionHeaderStyle"
                TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="18"/>
            <Setter Property="FontWeight"
                    Value="Bold"/>
            <Setter Property="Foreground"
                    Value="#2C3E50"/>
            <Setter Property="Margin"
                    Value="0,0,0,15"/>
        </Style>

        <!-- Стиль для основных кнопок -->
        <Style x:Key="PrimaryButtonStyle"
                TargetType="Button">
            <Setter Property="Background"
                    Value="#27AE60"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Padding"
                    Value="20,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                    Value="True">
                                <Setter Property="Background"
                                        Value="#229954"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопок отмены -->
        <Style x:Key="CancelButtonStyle"
                TargetType="Button">
            <Setter Property="Background"
                    Value="#E74C3C"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="FontSize"
                    Value="12"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Padding"
                    Value="10,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                    Value="True">
                                <Setter Property="Background"
                                        Value="#C0392B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для современных полей ввода -->
        <Style x:Key="ModernInputStyle"
                TargetType="Control">
            <Setter Property="BorderThickness"
                    Value="2"/>
            <Setter Property="BorderBrush"
                    Value="#E0E6ED"/>
            <Setter Property="Background"
                    Value="White"/>
            <Setter Property="Padding"
                    Value="10,8"/>
            <Setter Property="Margin"
                    Value="0,0,10,0"/>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
        </Style>

        <!-- Стиль для списка резервирований -->
        <Style x:Key="ModernListViewStyle"
                TargetType="ListView">
            <Setter Property="Background"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="FontSize"
                    Value="14"/>
        </Style>
    </Page.Resources>

    <Border Style="{StaticResource MainCardStyle}"
            Margin="20">
        <StackPanel>
            <!-- Заголовок -->
            <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,25">
                <TextBlock Text="📅"
                        FontSize="32"
                        Margin="0,0,15,0"
                        VerticalAlignment="Center"/>
                <StackPanel>
                    <TextBlock Text="Резервирование столов"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#2C3E50"/>
                    <TextBlock Text="Управление бронированием ресторана"
                               FontSize="14"
                               Foreground="#7F8C8D"/>
                </StackPanel>
            </StackPanel>

            <!-- Секция создания резервирования -->
            <Border Style="{StaticResource SectionCardStyle}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="➕"
                                FontSize="18"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"/>
                        <TextBlock Text="Новое резервирование"
                                Style="{StaticResource SectionHeaderStyle}"/>
                    </StackPanel>

                    <!-- Выбор зала и стола -->
                    <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,15">
                        <TextBlock Text="🏛️ Зал:"
                                VerticalAlignment="Center"
                                Width="80"/>
                        <ComboBox x:Name="HallComboBox"
                                  Style="{StaticResource ModernInputStyle}"
                                  Width="140"
                                  SelectionChanged="HallComboBox_SelectionChanged"/>

                        <TextBlock Text="🪑 Стол:"
                                VerticalAlignment="Center"
                                Width="60"
                                Margin="20,0,0,0"/>
                        <ComboBox x:Name="TableComboBox"
                                  Style="{StaticResource ModernInputStyle}"
                                  Width="100"/>
                    </StackPanel>

                    <!-- Выбор даты и времени -->
                    <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,15">
                        <TextBlock Text="📆 Дата:"
                                VerticalAlignment="Center"
                                Width="80"/>
                        <DatePicker x:Name="ReservationDatePicker"
                                    Style="{StaticResource ModernInputStyle}"
                                    Width="140"/>

                        <TextBlock Text="🕐 С:"
                                VerticalAlignment="Center"
                                Width="40"
                                Margin="20,0,0,0"/>
                        <xctk:TimePicker x:Name="FromTimePicker"
                                         Style="{StaticResource ModernInputStyle}"
                                         Width="100"
                                         Format="Custom"
                                         FormatString="HH:mm"/>

                        <TextBlock Text="До:"
                                VerticalAlignment="Center"
                                Width="30"
                                Margin="10,0,0,0"/>
                        <xctk:TimePicker x:Name="ToTimePicker"
                                         Style="{StaticResource ModernInputStyle}"
                                         Width="100"
                                         Format="Custom"
                                         FormatString="HH:mm"/>
                    </StackPanel>

                    <!-- Имя клиента и кнопка -->
                    <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,10">
                        <TextBlock Text="👤 Имя:"
                                VerticalAlignment="Center"
                                Width="80"/>
                        <TextBox x:Name="NameTextBox"
                                 Style="{StaticResource ModernInputStyle}"
                                 Width="200"/>

                        <Button Style="{StaticResource PrimaryButtonStyle}"
                                Margin="20,0,0,0"
                                Click="ReserveButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="✅"
                                        FontSize="14"
                                        Margin="0,0,8,0"
                                        VerticalAlignment="Center"/>
                                <TextBlock Text="Зарезервировать"
                                        VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Секция таймлайна резервирований -->
            <Border Style="{StaticResource SectionCardStyle}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📋"
                                FontSize="18"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"/>
                        <TextBlock Text="Таймлайн резервирований"
                                Style="{StaticResource SectionHeaderStyle}"/>
                    </StackPanel>

                    <!-- Фильтры таймлайна -->
                    <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,20">
                        <TextBlock Text="📅 Дата:"
                                VerticalAlignment="Center"
                                Width="80"/>
                        <DatePicker x:Name="TimelineDatePicker"
                                    Style="{StaticResource ModernInputStyle}"
                                    Width="140"
                                    SelectedDateChanged="TimelineDatePicker_SelectedDateChanged"/>

                        <TextBlock Text="🏛️ Зал:"
                                VerticalAlignment="Center"
                                Width="60"
                                Margin="20,0,0,0"/>
                        <ComboBox x:Name="TimelineHallComboBox"
                                  Style="{StaticResource ModernInputStyle}"
                                  Width="140"
                                  SelectionChanged="TimelineHallComboBox_SelectionChanged"/>
                    </StackPanel>

                    <!-- Список резервирований -->
                    <Border Background="White"
                            CornerRadius="10"
                            BorderBrush="#E0E6ED"
                            BorderThickness="1">
                        <ListView x:Name="TimelineListView"
                                  Style="{StaticResource ModernListViewStyle}"
                                  Height="300">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="🪑 Стол"
                                            Width="80"
                                            DisplayMemberBinding="{Binding TableNumber}"/>
                                    <GridViewColumn Header="⏰ Время"
                                            Width="200">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="🕐"
                                                            Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding FromTime, StringFormat='HH:mm'}"/>
                                                    <TextBlock Text=" - "
                                                            Margin="5,0"/>
                                                    <TextBlock Text="{Binding ToTime, StringFormat='HH:mm'}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="👤 Имя клиента"
                                            Width="150"
                                            DisplayMemberBinding="{Binding Name}"/>
                                    <GridViewColumn Header="🔧 Действия"
                                            Width="100">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Style="{StaticResource CancelButtonStyle}"
                                                        Click="CancelReservation_Click"
                                                        Tag="{Binding Id}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="❌"
                                                                FontSize="10"
                                                                Margin="0,0,4,0"/>
                                                        <TextBlock Text="Отменить"/>
                                                    </StackPanel>
                                                </Button>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</Page>
